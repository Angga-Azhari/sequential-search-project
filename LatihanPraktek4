public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String cari;
        System.out.println("masukan sebuah kata: ");
        cari = input.nextLine();

        int a = 0;
        for (int i = 0; i < cari.length(); i++) {
            if (cari.charAt(i) == 'a') {
                a++;
            }

        }
        System.out.println("jumlah hruf a pada kalimat di atas adalah: " + a);
    }
